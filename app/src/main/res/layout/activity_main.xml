<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aroma21">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:text="--เลือกกลิ่นที่ต้องการ--"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="?android:attr/colorForeground"
            android:textStyle="bold"
            android:layout_marginTop="50dp" />

        <Switch
            android:text="กลิ่น มะลิ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:id="@+id/switch_1"
            android:gravity="center_vertical|center_horizontal|start"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#DCDCE6" />

        <Switch
            android:text="กลิ่น Coolwater "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_2"
            android:textStyle="bold"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#44B7FF" />

        <Switch
            android:text="กลิ่น ยูคา"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch_3"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#51FFAF" />

    </LinearLayout>

</RelativeLayout>
